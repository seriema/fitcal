{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks":[{
        "taskName": "TypeScript watch",
        "command": "tsc",
        "isShellCommand": true,
        "args": ["-w", "-p", "."],
        "showOutput": "silent",
        "isBackground": true,
        "problemMatcher": "$tsc-watch"
    }, {
        "taskName": "node start",
        "command": "node",
        "isShellCommand": true,
        "args": ["server.js"],
        "showOutput": "silent",
        "isBackground": true
    }]
}